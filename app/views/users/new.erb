<% if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name %><br>
  <br>
  <%= f.label :last_name %><br>
  <%= f.text_field :last_name %><br>
  <br>
  <%= f.label :email_address %><br>
  <%= f.text_field :email_address %><br>
  <br>
  <%= f.submit %>
<% end %>
